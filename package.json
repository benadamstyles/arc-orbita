{
  "name": "arc-orbita",
  "private": true,
  "description": "Arc Orbita website",
  "version": "1.0.0",
  "author": "benstyles",
  "engines": {
    "node": ">= 9"
  },
  "scripts": {
    "start": "react-static start",
    "stage": "react-static build --staging && yarn run serve",
    "build": "react-static build",
    "postbuild": "yarn generate-qr",
    "predeploy": "yarn lint",
    "deploy": "yarn build && yarn run upload-site",
    "postdeploy": "echo https://www.arcpublications.co.uk/orbita/",
    "serve": "serve dist -p 3000",
    "generate-qr": "node -r flow-remove-types/register -r esm ./scripts/generate-qr.js",
    "flow": "flow check",
    "glow": "glow --watch !node_modules/*",
    "flow-typed": "flow-typed install --skip",
    "lint": "eslint .",
    "test": "yarn lint && yarn flow && yarn build"
  },
  "dependencies": {
    "fluture": "^8.0.2",
    "lodash": "^4.17.5",
    "maybes": "^0.2.3",
    "rapt": "^1.2.0",
    "react": "^16.2.0",
    "react-audio-player": "^0.10.0",
    "react-dom": "^16.2.0",
    "react-flip-page": "^0.16.0",
    "react-hot-loader": "^4.0.1",
    "react-markdown": "^3.3.0",
    "react-reveal": "^1.2.1",
    "react-router": "^4.2.0",
    "react-spring": "^5.3.8",
    "react-static": "^6.0.10",
    "recompose": "^0.27.0",
    "set-future-state": "^0.2.5",
    "styled-components": "^3.2.0"
  },
  "devDependencies": {
    "@iml/flow-highland": "^4.3.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-styled-components": "^1.3.0",
    "convexqr": "^0.0.4",
    "eslint": "^4.18.2",
    "eslint-config-mealsup": "^2.1.0",
    "eslint-plugin-babel": "^5.0.0",
    "eslint-plugin-eslint-comments": "^2.0.2",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-react-native": "^3.2.1",
    "esm": "^3.0.28",
    "flow-bin": "^0.70.0",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.3.0",
    "fs-extra": "^5.0.0",
    "glow": "^1.2.2",
    "highland": "^2.13.0",
    "js-yaml": "^3.11.0",
    "prettier": "^1.12.0",
    "serve": "^6.5.5",
    "sitemap-urls": "^3.0.0",
    "upload-site": "^1.0.0",
    "why-did-you-update": "^0.1.1"
  },
  "upload-site": {
    "auth": {
      "host": "arcpublications.co.uk",
      "port": 21,
      "authKey": "ben-arcpublications"
    },
    "src": "dist",
    "dest": ""
  }
}
